{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "react/jsx-indent": [
            "error",
            2
        ],
        "@typescript-eslint/indent": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}